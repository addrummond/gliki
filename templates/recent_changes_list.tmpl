#def title#Recent changes#end def#

#def body
    <p>Recent changes $from_ to <%= str(self.getVar('from_') + len(self.getVar('changes'))) %>:</p>
    <p>
        <a href="<%= links.recent_changes_link(self.getVar('from_') + self.getVar('n'), self.getVar('n')) %>">Next $n</a>
        #if $from_ > 0
        |
        <a href="<%= links.recent_changes_link(((self.getVar('from_') - self.getVar('n') < 0) and (0,) or (self.getVar('from_') - self.getVar('n')),)[0], self.getVar('n')) %>">Previous $n</a>
        #end if
    </p>
    <table class="history">
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Article title</th>
            <th>Comment</th>
        </tr>
        #for $c in $changes
        <tr>
            <td>
                <table class="date-diff-pair">
                    <tr>
                        <td>
                            <a class="article_ref"
                               href="<%= links.article_link(c['newest_article_title'], c['diff_revno_pair'][0]) %>">
                                $c.date
                            </a>
                        </td>
                        #if $c.diff_revno_pair[1] is not None
                        <td>
                             <a class="diff_ref" href="<%= links.diff_link(c['newest_article_title'], c['diff_revno_pair'][0], c['diff_revno_pair'][1]) %>">
                diff w/previous
                             </a>
                        </td>
                        #end if
                    </tr>
                </table>
            </td>
            <td><a href="<%= links.user_page_link(c['username']) %>" class="article_ref"><%= c['username'] %></a></td>
            <td>$c.article_title</td>
            <td><%= my_utils.truncate(etc.config.COMMENT_TRUNCATE_LENGTH, c['comment']) %></td>
        </tr>
        #end for#
    </table>
#end def

