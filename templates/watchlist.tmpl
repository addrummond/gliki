#import urllib
#import my_utils
#import links
#from templates.base import base

#extends base

#def title#$username - Watchlist#end def#

#def body#
    #if $getVar('error', False)
    <p>
        $error
    </p>
    #else
        <p>
        Articles from $from_ to $n on your watchlist:
        </p>

        #if len($article_titles) == 0
        <p>
        Currently, you do not have any articles on your watchlist.
        </p>
        #else
        <p>
        You can look at the list of
        <a href="<%= links.tracked_changes_link() %>">articles on your watchlist which have recently changed</a>.
        </p>
        <p>
            $next_and_prev_links($from_, $n, links.watchlist_link)
        </p>
        <ol class="article-list">
            #for $title in $article_titles
            <li><a href="<%= links.article_link(title) %>" class="article_ref">$title</a></li>
            #end for
        </ol>
        #end if
    #end if
#end def#

